<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

   <EditText
       android:id="@+id/ed_requestcity"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:hint="Enter Your City"/>

   <Button
       android:layout_below="@id/ed_requestcity"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="Check Weather"
       android:id="@+id/btn_checkweather"/>

   <TableLayout

       android:layout_below="@+id/btn_checkweather"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:stretchColumns="*">

       <TableRow>
           <TextView
               android:text=""
               />

           <TextView android:id="@+id/tv_windspeed"/>
       </TableRow>

       <TableRow>

           <TextView
               android:text=""
               />

           <TextView android:id="@+id/tv_temperature"/>


       </TableRow>

       <TextView
           android:text=""
           />

       <TextView android:id="@+id/tv_weather"/>

       <TableRow>


       </TableRow>

       </TableLayout>

</RelativeLayout>
